/**
 * Validates if amount is in multiples of 100.
 *
 * @param input The string entered in EditText
 * @param min Minimum allowed value (e.g., 100)
 * @param max Maximum allowed value (0 = unlimited)
 * @return true if valid, false otherwise
 */
public static boolean isValidAmount(String input, int min, int max) {
    if (input == null || input.trim().isEmpty()) {
        return false;
    }

    try {
        int value = Integer.parseInt(input.trim());

        if (value < min) return false;
        if (max > 0 && value > max) return false; // only check if max > 0

        return value % 100 == 0;   // âœ… multiple of 100 check

    } catch (NumberFormatException e) {
        return false;
    }
}
