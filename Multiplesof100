/**
 * Validates if amount is in multiples of 100.
 * Allows decimals (e.g., 100.00, 200.50) but rupee part must be multiple of 100.
 *
 * @param input The string entered in EditText
 * @return true if valid, false otherwise
 */
public static boolean isValidAmount(String input) {
    if (input == null || input.trim().isEmpty()) {
        return false;
    }

    try {
        double value = Double.parseDouble(input.trim());

        // Take only integer part (rupees) and check multiples of 100
        long rupees = (long) Math.floor(value);

        return rupees % 100 == 0;

    } catch (NumberFormatException e) {
        return false;
    }
}
